{
  "version": 2,
  "builds": [
    {
      "src": "server/server.js",
      "use": "@vercel/node",
      "config": {
        "env": { "CI": "false" }
      }
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build",
        "env": { "CI": "false" }
      }
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "server/server.js" },
    { "source": "/uploads/(.*)", "destination": "server/server.js" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
